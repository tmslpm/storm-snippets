{
    "compilerOptions": {
        "outDir": "../dist/plugin",
        "strict": true,
        "allowJs": true,
        "allowUmdGlobalAccess": false,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "useDefineForClassFields": true,
        "removeComments": true
    },
    "types": [
        "node"
    ],
    "include": [
        "../src"
    ],
    "exclude": [
        "../**/*.spec.ts"
    ]
}